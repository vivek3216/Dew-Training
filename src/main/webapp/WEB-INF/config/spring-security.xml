<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/security 
			http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	
	<security:http pattern="/static/**" security="none" />
	
	<security:http auto-config="false" use-expressions="true"  create-session="always" pattern="/events/**">
		<security:intercept-url pattern="/" access="isAnonymous()" />
		<security:intercept-url pattern="/user/**" access="hasAnyRole('ROLE_ADMIN','ROLE_USER')" />
		<security:form-login  login-page="/?login=do" />

		<security:logout logout-success-url	="/logout" invalidate-session="true" logout-url="/events/logout" />

	</security:http>
	<security:http auto-config="false" use-expressions="true" access-denied-page="/backoffice/"  create-session="always" pattern="/backoffice/**">
		<security:intercept-url pattern="/backoffice/" access="isAnonymous()" />
		<security:intercept-url pattern="/backoffice/**/" access="hasAnyRole('ROLE_ADMIN')" />
		<security:form-login  login-page="/backoffice/?login=do" />

		<security:logout logout-success-url	="/bologout" invalidate-session="true" logout-url="/backoffice/logout" />

	</security:http>
	
	<security:http auto-config="false" use-expressions="true"  create-session="always" pattern="/microbackoffice/**">
		<security:intercept-url pattern="/microbackoffice/" access="isAnonymous()" />
		<security:intercept-url pattern="/microbackoffice/**/" access="hasAnyRole('ROLE_ADMIN','ROLE_CS')" />
		<security:intercept-url pattern="/microbackoffice/**/**" access="hasAnyRole('ROLE_ADMIN','ROLE_CS')" />
		<security:form-login  login-page="/microbackoffice/?login=do" />

		<security:logout logout-success-url	="/mbologout" invalidate-session="true" logout-url="/microbackoffice/logout" />

	</security:http>

<security:authentication-manager alias="authenticationProvider">
	<security:authentication-provider ref="customAuthenticationProvider"></security:authentication-provider>
</security:authentication-manager>
